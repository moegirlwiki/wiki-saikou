{
  "name": "wiki-saikou",
  "version": "4.2.2",
  "description": "The library provides the out of box accessing to MediaWiki API in both browsers & Node.js, and the syntax is very similar to vanilla `new mw.Api()`. TypeScript definition included~",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": "./dist/index.umd.cjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/index.umd.cjs",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "test": "vitest run ./test",
    "clean": "rimraf dist/* lib/*",
    "build": "npm run clean && vite build",
    "prepublish": "npm run build"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moegirlwiki/wiki-saikou.git"
  },
  "keywords": [
    "mediawiki",
    "wikipedia",
    "mediawiki-api",
    "mediawiki-bot",
    "browser",
    "node",
    "api-wrapper",
    "typescript",
    "fetch",
    "fetch-api",
    "fexios"
  ],
  "author": "Dragon-Fish <dragon-fish@qq.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/moegirlwiki/wiki-saikou/issues"
  },
  "homepage": "https://github.com/moegirlwiki/wiki-saikou#readme",
  "dependencies": {
    "fexios": "^3.1.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^22.17.0",
    "dotenv": "^17.2.1",
    "pkgroll": "^2.14.5",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}