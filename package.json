{
  "name": "wiki-saikou",
  "version": "7.3.0",
  "description": "The library provides the out of box accessing to MediaWiki API in both browsers & Node.js, and the syntax is very similar to vanilla `new mw.Api()`. TypeScript definition included~",
  "type": "module",
  "main": "./dist/node.cjs",
  "module": "./dist/node.js",
  "browser": "./dist/browser.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "browser": {
        "import": "./dist/browser.js",
        "require": "./dist/browser.umd.js"
      },
      "node": {
        "import": "./dist/node.js",
        "require": "./dist/node.cjs"
      },
      "import": "./dist/node.js",
      "require": "./dist/node.cjs"
    },
    "./browser": {
      "import": "./dist/browser.js",
      "require": "./dist/browser.umd.js"
    },
    "./node": {
      "import": "./dist/node.js",
      "require": "./dist/node.cjs"
    },
    "./src/*": {
      "source": "./src/*",
      "types": "./dist/src/*"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "test": "vitest run ./src ./test",
    "test:rebuild": "npm run build && npm run test",
    "clean": "rimraf dist lib",
    "build": "npm run clean && run-p build:*",
    "build:node": "cross-env BUILD_FORMAT=node vite build",
    "build:browser-umd": "cross-env BUILD_FORMAT=browser-umd vite build",
    "build:browser-es": "cross-env BUILD_FORMAT=browser-es vite build",
    "prepublish": "npm run build"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moegirlwiki/wiki-saikou.git"
  },
  "keywords": [
    "mediawiki",
    "wikipedia",
    "mediawiki-api",
    "mediawiki-bot",
    "browser",
    "node",
    "api-wrapper",
    "typescript",
    "fetch",
    "fetch-api",
    "fexios"
  ],
  "author": "Dragon-Fish <dragon-fish@qq.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/moegirlwiki/wiki-saikou/issues"
  },
  "homepage": "https://github.com/moegirlwiki/wiki-saikou#readme",
  "dependencies": {
    "fexios": "^5.0.1",
    "tslib": "^2.8.1",
    "wiki-saikou": "workspace:^"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.53.3",
    "@types/node": "^22.18.12",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "hono": "^4.10.3",
    "npm-run-all2": "^8.0.4",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "unplugin-dts": "1.0.0-beta.6",
    "vite": "^7.1.12",
    "vitest": "^4.0.3"
  }
}